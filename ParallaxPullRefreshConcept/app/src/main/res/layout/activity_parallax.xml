<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:fitsSystemWindows="true">

    <com.nirhart.parallaxscroll.views.ParallaxNestedScrollView
        android:id="@+id/parallax_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:fillViewport="true"
        app:inner_parallax_factor="1.9"
        app:parallax_factor="1.9"
        app:parallax_views_num="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sky_bg"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:gravity="center"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/mountain_bg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="-200dp"
                android:gravity="bottom"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/coconut_bg"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="bottom|right"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="-150dp"
                android:gravity="bottom" />

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/testData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:padding="5dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            </android.support.design.widget.CoordinatorLayout>

        </LinearLayout>
    </com.nirhart.parallaxscroll.views.ParallaxNestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_menu_send"
        app:layout_anchor="@id/testData"
        app:layout_anchorGravity="top|left" />

</android.support.design.widget.CoordinatorLayout>
